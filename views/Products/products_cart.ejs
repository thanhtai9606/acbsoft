                        //     "targets": [3],
                        //     "visible": false
                        // }
                    ],
                    select: true,           
                    responsive: !0,
                    keys: true

                });                 
          
        }
        function rowClickEvent() {
          var table = $('.dataTables-example').DataTable();
            
           $('.dataTables-example tbody').on('click', 'tr', function () {
               var data = table.row( this ).data();
               alert( 'You clicked on '+data[0]+'\'s row' );
               $('#Qty').prop('disabled', false);
           } );
        }


    </script>